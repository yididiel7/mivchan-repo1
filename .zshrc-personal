#create a file called .zshrc-personal and put all your personal aliases.
#in there. They will not be overwritten by skel.
# To Sort Text Press SHIFT+V Select Text and Press SHIFT : For Command Mode < > and type !sort.
alias air="ansiweather -l Dimona,Il -u metric -s true -f 5 -d true"
alias bpy="bpython"
alias cat='ccat'
alias c='reset'
# Logo-ls Aliases
alias ilag='logo-ls -AD'
alias ila='logo-ls -A'
alias illg='logo-ls -alD'
alias ill='logo-ls -al'
alias ilsg='logo-ls -D'
alias ils='logo-ls'
# Special Aliases
alias ip='ip --color=auto'
alias nc='ncdu --color dark'
alias re='reset'
alias snc='sudo ncdu --color dark -x /'
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python3 -"
alias the='thesaurus'
alias weather="curl wttr.in/Dimona,"
alias yt-dlp="yt-dlp -f bv+ba/b"
# Exa Aliases
alias l='exa'
alias la='exa -a'
alias ll='exa -lah'
alias ls='exa --color=auto'
alias ls='exa --grid --color=auto --icons'
